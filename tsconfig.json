{
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": true,

    "outDir": "dist",
    "target": "ES5",
    "module": "es2015",
    "lib": ["dom", "ES5", "ES6"],

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "types",
    "src/index.ts"
  ]
}